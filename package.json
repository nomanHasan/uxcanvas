{
  "name": "uxcanvas",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Modern Infinite Canvas App - Built with React, TypeScript, and Zustand",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron . --no-sandbox\"",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "chokidar": "^3.6.0",
    "clsx": "^2.1.1",
    "immer": "^10.1.1",
    "nanoid": "^5.0.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.5.3",
    "vite": "^5.3.1",
    "vite-plugin-electron": "^0.28.6",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.uxcanvas.app",
    "productName": "UX Canvas",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "output": "release"
    }
  }
}
